[Unit]
Description=Vosk Multi-Channel Video Processor
After=network.target

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/opt/vosk_speech
Environment=PYTHONUNBUFFERED=1
# Ruta del JSON de configuraci√≥n (ajustar si usas /etc)
ExecStart=/opt/vosk_speech/.venv/bin/python /opt/vosk_speech/procesar_multi.py /etc/vosk_speech/channels.json

[Install]
WantedBy=multi-user.target

